<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bev.and.owe"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mark"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/APP_ID" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="bev.and.owe.HomeScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bev.and.owe.PreTimedPlay"
            android:label="@string/title_activity_pre_timed_play"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.TimedPlay"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.TimedPlayPaused"
            android:label="@string/title_activity_timed_play_paused"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.Instructions"
            android:label="@string/title_activity_instructions"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.SuggestPhraze"
            android:label="@string/title_suggest_phraze"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.TimedPlayGameOver"
            android:label="@string/title_activity_timed_play_game_over"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.FreePlay"
            android:label="@string/title_activity_free_play"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="bev.and.owe.HighScores"
            android:label="@string/title_activity_high_scores"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
