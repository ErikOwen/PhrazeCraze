<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TimedPlayGameOver" >

    <TextView
		android:id="@+id/gameOverText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:paddingTop="15sp"
		android:layout_centerHorizontal="true"
		android:textSize="40sp"
		android:textColor="@color/green"
		android:text="@string/gameOver" />
	
	<TextView
	    android:id="@+id/gameOverCompletedPhrazes"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/gameOverText"
		android:paddingTop="50sp"
		android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
		android:layout_centerHorizontal="true"
		android:textSize="25sp"
		android:textColor="@color/green"
		android:text="@string/completedPhrazes" />

	<TextView
	    android:id="@+id/possibleHighScore"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/gameOverCompletedPhrazes"
		android:paddingTop="15sp"
		android:textAlignment="gravity"
        android:gravity="center_horizontal"
		android:layout_centerHorizontal="true"
		android:textSize="25sp"
		android:textColor="@color/green"
		android:text="@string/newHighScore" />
	
	<Button 
	    android:id="@+id/playAgainButton"
	    android:layout_width="200sp"
		android:layout_height="60sp"
		android:layout_below="@id/possibleHighScore"
		android:layout_marginTop="50sp"
		android:layout_centerHorizontal="true"
		android:textSize="20sp"
		android:text="Play Again" />
	
	<Button 
	    android:id="@+id/returnHomeButton"
	    android:layout_width="200sp"
		android:layout_height="60sp"
		android:layout_below="@id/playAgainButton"
		android:paddingTop="15sp"
		android:layout_centerHorizontal="true"
		android:textSize="20sp"
		android:text="Main Menu" />

</RelativeLayout>
