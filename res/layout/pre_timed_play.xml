<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PreTimedPlay" >

    <TextView
        android:id="@+id/pre_timedplay_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="@string/pre_timed_play_banner"
        android:textColor="@color/green"
        android:textSize="75sp" />

    <ImageView
        android:id="@+id/timed_play_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pre_timedplay_banner"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:gravity="center_horizontal"
        android:maxHeight="100sp"
        android:paddingLeft="23sp"
        android:scaleType="fitCenter"
        android:src="@drawable/timer_icon" />

    <CheckBox
        android:id="@+id/checkBox1min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timed_play_image"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/oneMin"
        android:textColor="@color/green"
        android:textSize="15sp" />
	<CheckBox
        android:id="@+id/checkBox2min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox1min"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/twoMin" 
        android:textColor="@color/green"/>
	<CheckBox
        android:id="@+id/checkBox3min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2min"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/threeMin"
        android:textColor="@color/green" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/checkBox3min"
	    android:gravity="center_horizontal"
	    android:paddingTop="20sp"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/preTimedPlayMenuButton"
	        android:layout_width="120sp"
			android:layout_height="40sp"
			android:text="Main Menu" />
	  	<Button 
	        android:id="@+id/preTimedPlayStartButton"
	        android:layout_width="120sp"
			android:layout_height="40sp"
			android:text="Start!" />
	</LinearLayout>
</RelativeLayout>