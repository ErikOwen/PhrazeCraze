<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/background"
    tools:context=".TimedPlay" >
	
    <RelativeLayout 
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentTop="true">
		<TextView
		    android:id="@+id/completedPhrazesText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:text="@string/phrazesCompleted"
			android:textSize="24sp"
			android:textColor="@color/green" />
        <ImageButton 
	     	android:id="@+id/pauseButton"
	        android:layout_width="40sp"
			android:layout_height="40sp"
			android:layout_centerInParent="true"
			android:background="@drawable/pause_button_temp" />
		<TextView
		    android:id="@+id/timeLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:text="@string/timer"
			android:textSize="24sp"
			android:textColor="@color/green" />
    </RelativeLayout>
    
	<ScrollView
		android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/topBar">

	    <RelativeLayout 
			android:layout_width="match_parent"
	    	android:layout_height="150sp"
	    	android:layout_marginTop="20sp"

			android:background="@drawable/phrazeborder" >
        
        	<TextView 
            	android:id="@+id/phrazeText"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerInParent="true"
            	android:textAlignment="gravity"
            	android:gravity="center_horizontal"
            	android:textColor="@color/black"
            	android:singleLine="false"
            	android:layout_marginLeft="30dp"
            	android:layout_marginRight="30dp"
            	android:textSize="40sp"
            	android:text="@string/defaultPhraze"/>
        
    	</RelativeLayout>
    </ScrollView>
    
    <RelativeLayout 
       	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:layout_alignParentBottom="true">
       
       	<LinearLayout 
 			android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:background="@color/black"
	   		android:layout_above="@+id/editTextLayout"
	   		android:gravity="center_horizontal"
	   		android:orientation="horizontal">
	   
       		<ImageButton 
	       		android:id="@+id/skipButton"
	       		android:layout_width="120sp"
				android:layout_height="40sp"
				android:layout_marginRight="10sp"
				android:background="@drawable/skip_button_selector"
				android:text="Skip" />
	   		<ImageButton 
	       		android:id="@+id/submitButton"
	       		android:layout_width="120sp"
				android:layout_height="40sp"
				android:layout_marginLeft="10sp"
				android:background="@drawable/submit_button_selector"
				android:text="Submit" />
    	</LinearLayout>
    
    	<LinearLayout
       		android:id="@+id/editTextLayout"
 			android:layout_width="match_parent"
	   		android:layout_height="wrap_content"
	   		android:layout_alignParentBottom="true"
	   		android:orientation="horizontal">
 			<EditText
 			    android:id="@+id/answerInput"
	  	    	android:layout_width="fill_parent"
	  	    	android:layout_height="fill_parent"
	  	    	android:hint="Enter Your Answer Here"/>
    	</LinearLayout>
    	
    </RelativeLayout>

</RelativeLayout>
